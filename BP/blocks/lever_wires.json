				"group": "construction",
				"category": "construction"
			},
			"minecraft:on_placed": {
				"event": "fb:electric_fuction",
				"target": "self"
			}
		},
		"permutations": [
			{
				"condition": "query.block_property('bridge:block_rotation') == 2",
