{
	"format_version": "1.16.100",
	"minecraft:block": {
		"description": {
			"identifier": "fb:blue_chair",
			"category": "Nature",
			"properties": {
				"block:rotation": [
					1,
					2,
					3,
					4,
					5
				]
			}
		},
		"components": {
			"minecraft:destroy_time": 0.3,
			"minecraft:friction": 0.7,
			"minecraft:map_color": "#FFFFFF",
			"minecraft:explosion_resistance": 1,
			"minecraft:flammable": {
				"flame_odds": 1,
				"burn_odds": 1
			},
			"minecraft:block_light_absorption": 0,
			"minecraft:block_light_emission": 0,
			"minecraft:on_player_destroyed": {
				"event": "remove:block",
				"target": "self"
			},
			"minecraft:material_instances": {
				"*": {
					"texture": "blue_chair",
					"render_method": "alpha_test"
				}
			},
			"minecraft:on_step_on": {
				"event": "step:on",
				"target": "self"
			},
			"minecraft:on_step_off": {
				"event": "step:off",
				"target": "self"
			},
			"minecraft:on_placed": {
				"event": "sit",
				"target": "self"
			},
			"minecraft:random_ticking": {
				"on_tick": {
					"event": "random:tick",
					"target": "self"
				}
			},
			"minecraft:on_fall_on": {
				"event": "fall:on",
				"target": "self"
			},
			"minecraft:ticking": {
				"looping": true,
				"range": [
					10,
					10
				],
				"on_tick": {
					"event": "on_tick",
					"target": "self"
				}
			},
			"minecraft:geometry": "geometry.chair",
			"minecraft:on_player_placing": {
				"event": "size:block"
			},
			"minecraft:entity_collision": {
				"origin": [
					-8,
					0,
					-8
				],
				"size": [
					16,
					12,
					16
				]
			},
			"minecraft:pick_collision": {
				"origin": [
					-8,
					0,
					-8
				],
				"size": [
					16,
					12,
					16
				]
			},
			"minecraft:creative_category": {
				"category": "construction",
				"group": "itemGroup.name.construction"
			},
			"minecraft:loot": "loot_tables/fnafblocks",
			"minecraft:on_interact": {
				"event": "rider"
			}
		},
		"events": {
			"remove:block": {},
			"size:block": {
				"set_block_property": {
					"block:rotation": "query.cardinal_facing_2d"
				}
			},
			"step:on": {},
			"step:off": {},
			"on_tick": {},
			"random:tick": {},
			"fall:on": {},
			"rider": {
				"sequence": [
					{
						"run_command": {
							"command": [
								"summon fb:sit ~ ~ ~",
								"execute @e[type=fb:sit,c=1,r=2] ~~~ tp @s ~~~ facing @p"
							]
						},
						"trigger": {
							"event": "set_rider"
						}
					}
				]
			},
			"set_rider": {
				"run_command": {
					"command": [
						"ride @s start_riding @e [type=fb:sit,c=1,r=2] teleport_rider"
					],
					"target": "other"
				}
			}
		},
		"permutations": [
			{
				"condition": "query.block_property('block:rotation') == 2",
				"components": {
					"minecraft:rotation": [
						0,
						-180,
						0
					]
				}
			},
			{
				"condition": "query.block_property('block:rotation') == 3",
				"components": {
					"minecraft:rotation": [
						0,
						0,
						0
					]
				}
			},
			{
				"condition": "query.block_property('block:rotation') == 4",
				"components": {
					"minecraft:rotation": [
						0,
						-90,
						0
					]
				}
			},
			{
				"condition": "query.block_property('block:rotation') == 5",
				"components": {
					"minecraft:rotation": [
						0,
						90,
						0
					]
				}
			}
		]
	}
}