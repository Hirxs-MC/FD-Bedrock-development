{
	"format_version": "1.16.100",
	"minecraft:block": {
		"description": {
			"identifier": "fb:wall_puppet",
			"properties": {
				"p:facing": [
					0,
					1,
					2,
					3
				],
				"p:changer": [
					0,
					1,
					2
				]
			}
		},
		"permutations": [
			{
				"condition": "q.block_property('p:facing') == 0",
				"components": {
					"minecraft:rotation": [
						0,
						180,
						0
					]
				}
			},
			{
				"condition": "q.block_property('p:facing') == 1",
				"components": {
					"minecraft:rotation": [
						0,
						0,
						0
					]
				}
			},
			{
				"condition": "q.block_property('p:facing') == 2",
				"components": {
					"minecraft:rotation": [
						0,
						270,
						0
					]
				}
			},
			{
				"condition": "q.block_property('p:facing') == 3",
				"components": {
					"minecraft:rotation": [
						0,
						90,
						0
					]
				}
			},
			{
				"condition": "q.block_property('p:changer') == 0",
				"components": {
					"minecraft:geometry": "geometry.wall_puppet",
					"minecraft:material_instances": {
						"*": {
							"texture": "wp0",
							"render_method": "alpha_test",
							"ambient_occlusion": false
						}
					}
				}
			},
			{
				"condition": "q.block_property('p:changer') == 1",
				"components": {
					"minecraft:geometry": "geometry.wall_puppet_2",
					"minecraft:material_instances": {
						"*": {
							"texture": "wp1",
							"render_method": "alpha_test",
							"ambient_occlusion": false
						}
					}
				}
			},
			{
				"condition": "q.block_property('p:changer') == 2",
				"components": {
					"minecraft:geometry": "geometry.wall_puppet_3",
					"minecraft:material_instances": {
						"*": {
							"texture": "wp2",
							"render_method": "alpha_test",
							"ambient_occlusion": false
						}
					}
				}
			}
		],
		"components": {
			"minecraft:display_name": "fb:wall_puppet",
			"minecraft:creative_category": {
				"category": "construction",
				"group": "itemGroup.name.Construction"
			},
			"minecraft:map_color": "#ffffff",
			"minecraft:destroy_time": 4,
			"minecraft:explosion_resistance": 4,
			"minecraft:block_light_absorption": 0,
			"minecraft:breathability": "air",
			"minecraft:flammable": {
				"flame_odds": 30,
				"burn_odds": 30
			},
			"minecraft:geometry": "geometry.wall_puppet",
			"minecraft:aim_collision": {
				"origin": [
					-8,
					0,
					6
				],
				"size": [
					16,
					16,
					2
				]
			},
			"minecraft:entity_collision": {
				"origin": [
					-8,
					0,
					6
				],
				"size": [
					16,
					16,
					2
				]
			},
			"minecraft:on_player_placing": {
				"event": "e:set.facing"
			}
		},
		"events": {
			"e:set.facing": {
				"set_block_property": {
					"p:facing": "q.cardinal_facing_2d-2"
				}
			},
			"e:cycle_changer": {
				"set_block_property": {
					"p:changer": "q.block_property('p:changer')==2?0:q.block_property('p:changer')+1"
				},
				"run_command": {
					"command": [
						"playsound block.lantern.break @p ~~~",
						"particle foxes:texture ~~~"
					]
				}
			}
		}
	}
}